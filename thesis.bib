	author = {Battaglia, P. and Hamrick, Jessica B. and Bapst, V. and Sanchez-Gonzalez, Alvaro and Zambaldi, V. and Malinowski, Mateusz and Tacchetti, A. and Raposo, David and Santoro, Adam and Faulkner, Ryan and Glehre, aglar and Song, H. F. and Ballard, A. J. and Gilmer, J. and Dahl, George E. and Vaswani, Ashish and Allen, Kelsey R. and Nash, C. and Langston, Victoria and Dyer, Chris and Heess, N. and Wierstra, Daan and Kohli, Pushmeet and Botvinick, M. and Vinyals, Oriol and Li, Yujia and Pascanu, Razvan},
